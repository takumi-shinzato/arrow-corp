<section class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Background Image -->
  <div class="absolute inset-0 z-0">
    <div class="absolute inset-0 bg-black/50 z-10"></div>
    <img 
      src="/background.jpg" 
      alt="City skyline" 
      class="w-full h-full object-cover"
    />
  </div>

  <!-- Floating Elements -->
  <div class="absolute inset-0 z-20 overflow-hidden">
    <div class="floating-element absolute top-20 left-10 w-12 h-12 bg-white/10 rounded-full"></div>
    <div class="floating-element absolute top-40 right-20 w-8 h-8 bg-accent-500/20 rounded-full" style="animation-delay: 1s;"></div>
    <div class="floating-element absolute bottom-32 left-1/4 w-6 h-6 bg-white/15 rounded-full" style="animation-delay: 2s;"></div>
    <div class="floating-element absolute bottom-20 right-1/3 w-10 h-10 bg-accent-500/15 rounded-full" style="animation-delay: 0.5s;"></div>
  </div>

  <!-- Content -->
  <div class="relative z-30 text-center px-4 sm:px-6 lg:px-8 max-w-4xl mx-auto">
    <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6 animate-fade-in">
      成長を支え、<br>
      <span class="text-transparent bg-clip-text bg-gradient-to-r from-accent-500 to-orange-400">
        可能性を広げる
      </span>
    </h1>

    <p class="text-base sm:text-lg md:text-xl lg:text-2xl text-gray-200 mb-8 max-w-2xl mx-auto animate-slide-up leading-relaxed">
      多様な領域で<br class="hidden sm:block">
      人と社会の成長を<br class="hidden sm:block">
      支えています
    </p>
    
    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center animate-scale-in" style="animation-delay: 0.4s;">
      <a 
        href="/#services" 
        class="bg-accent-500 hover:bg-accent-600 text-white px-8 py-4 rounded-full font-semibold text-lg transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl"
      >
        事業紹介を見る
      </a>
      <a 
        href="/#about-details" 
        class="bg-white/10 hover:bg-white/20 text-white border-2 border-white/30 px-8 py-4 rounded-full font-semibold text-lg transition-all duration-300 backdrop-blur-sm"
      >
        会社概要
      </a>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 z-30 animate-bounce">
    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>
</section>

<style>
  .floating-element {
    animation: float 6s ease-in-out infinite;
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-20px);
    }
  }
</style>